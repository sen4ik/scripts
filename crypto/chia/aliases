alias chiastop='chia stop all -d'
alias stopchia='chiastop'
alias wallet='chia wallet show'
alias mnemonic='chia keys show --show-mnemonic-seed'
alias keys='chia keys show'
alias key='keys'
alias diskusage='df -h -x squashfs -x tmpfs -x devtmpfs'
alias df='df -h -x squashfs -x tmpfs -x devtmpfs'
alias chialog='tail -F ~/.chia/mainnet/log/debug.log'
alias lsblk='lsblk -o NAME,SIZE,FSTYPE,UUID,MOUNTPOINT'
alias diskinfo='lsblk -o NAME,SIZE,FSTYPE,UUID,MOUNTPOINT'
alias disks='diskinfo'
alias countplots="sudo find /media | fgrep -c '.plot'"
alias cl='clear && reset'
alias dropcache='date; sudo sync; echo 3 | sudo tee /proc/sys/vm/drop_caches && sudo swapoff -a && sudo swapon -a; date'
alias clearcache='dropcache'
